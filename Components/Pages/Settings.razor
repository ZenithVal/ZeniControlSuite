@page "/Settings"
@using ZeniControlSuite.Authentication
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin, LocalHost")]

<PageTitle>Settings</PageTitle>
<MudDivider></MudDivider>

<br/>
<br/>

<div>
    <h3>Avatar OSC</h3>
    <MudSwitch @bind-Value="@AvatarControls.pageEnabled" Color="Color.Primary" />
    <br>
    <h3>Games & Points</h3>
    <MudSwitch @bind-Value="@GamesPoints.pageEnabled" Color="Color.Primary" />
    <br>
    <h3>Bindings</h3>
    <MudSwitch @bind-Value="@Bindings.pageEnabled" Color="Color.Primary" />
    <br>
    <h3>Devices</h3>
    <MudSwitch @bind-Value="@Devices.pageEnabled" Color="Color.Primary" />
    <br>
    <h3>App Debug Mode</h3>
    <MudSwitch @bind-Value="@Settings.AppDebug" Color="Color.Primary" />
    <br>
</div>


<br />



@*reload DiscordUsers.Json*@
<MudButton OnClick="@(() => { Whitelist.loadDiscordUsersJson(); })">Reload Discord Users Json</MudButton>

@code {
    public static bool AppDebug = false;
}