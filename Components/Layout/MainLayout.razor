@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<MudThemeProvider Theme="ZeniTheme" IsDarkMode=true />
<MudPopoverProvider />
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">

    <div class="sidebar">
        <NavMenu />
    </div>

    <AuthorizeView>
        <Authorized>
            <main style="overflow: scroll;">
                <article class="content px-4;">
                    @Body
                </article>
            </main>
        </Authorized>
        <NotAuthorized>
			<main style="overflow: scroll;">
				<article class="content px-4;">
					<h1>Not Authorized</h1>
					<p class="alert alert-danger">Not Authorized, please log in.</p>
				</article>
			</main>
        </NotAuthorized>
    </AuthorizeView>

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    MudTheme ZeniTheme = new MudTheme() {
            PaletteDark = new PaletteDark() {
                Secondary = Colors.Teal.Darken3,
                Error = Colors.Red.Darken3,
            },
        };
}